@model RegistryWeb.Models.Entities.OwnerReasons;
@{
    ViewData["Title"] = "Удаление основания собственности";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="OwnerReasons" asp-action="Delete" asp-route-IdReason="@Model.IdReason">
    <div class="form-group">
        <dl class="dl-horizontal">
            <dt class="control-label">Название</dt>
            <dd>
                @Html.DisplayFor(or => or.IdReasonTypeNavigation.ReasonName, new { @class = "form-control" })
            </dd>
            <dt class="control-label">Номер</dt>
            <dd>
                @Html.DisplayFor(or => or.ReasonNumber, new { @class = "form-control" })
            </dd>
            <dt class="control-label">Дата</dt>
            <dd>
                @Html.DisplayFor(or => or.ReasonDate, new { @class = "form-control" })
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <a class="btn btn-default" asp-controller="OwnerReasons" asp-action="Index">Назад</a>
        <input type="submit" class="btn btn-danger" value="Удалить" />
    </div>
</form>
