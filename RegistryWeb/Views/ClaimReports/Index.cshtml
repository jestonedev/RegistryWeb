<form id="ClaimCommonReportForm">
    <div class="modal fade" id="ClaimCommonReportModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="ActionUrl" />
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="ClaimCommonReport_StartDate">С</label>
                            <input type="date" class="form-control" title="Предъявлен период (с)" name="StartDate"
                                   id="ClaimCommonReport_StartDate" data-val="true" data-val-required="Не указана начальная дата" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="StartDate" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group col-6">
                            <label for="ClaimCommonReport_EndDate">По</label>
                            <input type="date" class="form-control" title="Предъявлен период (по)" name="EndDate"
                                   id="ClaimCommonReport_EndDate" data-val="true" data-val-required="Не указана конечная дата" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="EndDate" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label for="ClaimCommonReport_Executor">Исполнитель</label>
                            <select class="selectpicker form-control" title="Исполнитель" name="Executor"
                                    data-val="true" data-val-required="Не выбран исполнитель" id="ClaimCommonReport_Executor">
                                @foreach (Executor executor in Model.Executors)
                                {
                                    if (Model.CurrentExecutor?.IdExecutor == executor.IdExecutor)
                                    {
                                        <option value="@executor.IdExecutor" selected>@executor.ExecutorName</option>
                                    }
                                    else
                                    {
                                        <option value="@executor.IdExecutor">@executor.ExecutorName</option>
                                    }
                                }

                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="Executor" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label for="ClaimCommonReport_IdStateType">Этап исковой работы</label>
                            <select class="selectpicker form-control" title="Этап исковой работы" name="IdStateType"
                                    asp-items="@(new SelectList(Model.StateTypes, "IdStateType", "StateType"))"
                                    data-val="true" data-val-required="Не выбран этап исковой работы" id="ClaimCommonReport_IdStateType"></select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="IdStateType" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12 rr-claim-common-report-checkbox">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="IsCurrentState">
                                <label class="form-check-label" for="IsCurrentState" title="Текущее состояние">Текущее состояние</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="form-group col-1 ml-2" for="StDate_Month">С</label>
                        <div class="form-group col-5">
                            <select id="StDate_Month" name="StDate_Month" class="form-control selectpicker" data-title="Выберите месяц"
                                    data-val="true" data-val-required="Укажите месяц">
                                <option></option>
                                @{
                                    @for (var i = 0; i < allMonthes.Count; i++)
                                    {
                                        if (i + 1 == DateTime.Now.Month)
                                        {
                                            <option selected value="@(i+1)">@allMonthes[i]</option>
                                        }
                                        else
                                        {
                                            <option value="@(i+1)">@allMonthes[i]</option>
                                        }
                                    }
                                }
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="StDate_Month" data-valmsg-replace="true"></span>

                        </div>
                        <div class="form-group col-5  ml-4">
                            <select id="StDate_Year" name="StDate_Year" class="form-control selectpicker" data-title="Выберите год"
                                    data-val="true" data-val-required="Укажите год">
                                <option></option>
                                @for (int i = DateTime.Now.Year; i > DateTime.Now.Year - 5; i--)
                                {
                                    if (i == DateTime.Now.Year)
                                    {
                                        <option selected value="@i">@i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@i</option>
                                    }
                                }
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="StDate_Year" data-valmsg-replace="true"></span>
                        </div>
                        <label class="form-group col-1 ml-2" for="EndDate_Month">По</label>
                        <div class="form-group col-5">
                            <select id="EndDate_Month" name="EndDate_Month" class="form-control selectpicker" data-title="Выберите месяц"
                                    data-val="true" data-val-required="Укажите месяц">
                                <option></option>
                                @{

                                    @for(var i = 0; i < allMonthes.Count; i++)
                                    {
                                        if (i + 1 == DateTime.Now.Month)
                                        {
                                            <option selected value="@(i+1)">@allMonthes[i]</option>
                                        }
                                        else
                                        {
                                            <option value="@(i+1)">@allMonthes[i]</option>
                                        }
                                    }
                                }
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="EndDate_Month" data-valmsg-replace="true"></span>

                        </div>
                        <div class="form-group col-5  ml-4">
                            <select id="EndDate_Year" name="EndDate_Year" class="form-control selectpicker" data-title="Выберите год"
                                    data-val="true" data-val-required="Укажите год">
                                <option></option>
                                @for (int i = DateTime.Now.Year; i > DateTime.Now.Year - 5; i--)
                                {
                                    if (i == DateTime.Now.Year)
                                    {
                                        <option selected value="@i">@i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@i</option>
                                    }
                                }
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="EndDate_Year" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group col-12">
                            <select name="Flag" class="form-control selectpicker" data-title="Выберите критерий рассылки">
                                <option selected value="0">Все</option>
                                <option value="1">Успешно отправленные</option>
                                <option value="2">Ошибки отправки</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary rr-report-submit">Сформировать</button>
                    <button type="button" class="btn btn-secondary cancel" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </div>
</form>

