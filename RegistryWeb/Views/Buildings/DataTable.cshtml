@model RegistryWeb.ViewModel.BuildingsVM;
@using RegistryWeb.ViewOptions;
@using RegistryWeb.Extensions;
@{ 
    var ids = Context.Session.Get<List<int>>("idBuildings");
    var check = "";
}
<table class="table table-hover">
    <thead>
        <tr>
            @*<th class="r-table-header-cell">
            <a href="#" data-order-field="IdBuilding" data-order-direction="@OrderDirection.Ascending">
                № по реестру
            </a>
        </th>*@
            <th></th>
            <th>№ по реестру</th>
            <th width="350px">Адрес</th>
            <th>Кадастровый номер</th>
            <th>Общая площадь</th>
            <th>Жилая площадь</th>
            <th>Текущее состояние</th>
            @*<th class="r-table-header-cell">
            <a href="#" data-order-field="ObjectState" data-order-direction="@OrderDirection.Ascending">
                Текущее состояние
            </a>
        </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Buildings)
        {
        <tr>
            @if (ids.Contains(item.IdBuilding))
            {
                check = "checked";
            }
            else
            {
                check = "";
            }
            <td><input type="checkbox" class="idBuildingCheckbox" data-id="@item.IdBuilding" @Html.Raw(check) /></td>
            <td>@item.IdBuilding</td>
            <td>@item.IdStreetNavigation.StreetName, д.@item.House</td>
            <td>@item.CadastralNum</td>
            <td>@item.TotalArea</td>
            <td>@item.LivingArea</td>
            <td>@item.IdStateNavigation.StateNeutral</td>
            <td>
                <a class="btn btn-primary oi oi-eye" title="Подробнее" aria-label="Подробнее"
                   asp-action="Details" asp-controller="Buildings" asp-route-idBuilding="@item.IdBuilding"></a>
                @*<a class="btn btn-default oi oi-pencil" title="Изменить" aria-label="Изменить"
               asp-action="Edit" asp-controller="Building" asp-route-idBuilding="@item.IdBuilding"></a>
            <a class="btn btn-danger oi oi-x" title="Удалить" aria-label="Удалить"
               asp-action="Delete" asp-controller="Building" asp-route-idBuilding="@item.IdBuilding"></a>*@
            </td>
        </tr>
        }
    </tbody>
</table>