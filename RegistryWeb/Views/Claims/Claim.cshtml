@using RegistryWeb.Extensions
@model RegistryWeb.ViewModel.ClaimVM;
@{

    if (ViewBag.Action == "Create")
    {
        ViewData["Title"] = "Создание новой исковой работы";
    }
    else
    {
        ViewData["Title"] = "Исковая работа №" + Model.Claim.IdClaim;
    }
    ViewData["Id"] = Model.Claim.IdClaim;
    ViewData["StateTypes"] = Model.StateTypes;
    ViewData["StateTypeRelations"] = Model.StateTypeRelations;
    ViewData["CurrentExecutor"] = Model.CurrentExecutor;
    ViewData["ClaimCourtOrders"] = Model.Claim.ClaimCourtOrders;
    ViewData["Executors"] = Model.Executors;
    ViewData["Judges"] = Model.Judges;
    ViewData["Signers"] = Model.Signers;
}

@section validation
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
}

@section styles {
    <link href="~/lib/bootstrap4-toggle/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/claims.css" runat="server" />
}


<div class="card">
    <div class="card-header d-flex flex-column flex-lg-row">
        <label class="form-check-label h2 col-sm-12 col-lg-6 col-xl-7 pl-0">@ViewData["Title"]</label>

        <div class="col-sm-12 col-lg-6 col-xl-5 text-lg-right pl-0 pr-0 mt-2 mt-lg-0">
            @if (ViewBag.Action == "Details" || ViewBag.Action == "Delete")
            {

                @if (Model.RentObjects.Any())
                {
                    <div class="btn-group" role="group" aria-label="Панель доступа">
                        <button class="btn btn-success dropdown-toggle" type="button" title="Здания и помещения" aria-label="Здания и помещения" id="registryBtn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="oi oi-home"></span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="registryBtn">
                            @{
                                var rentObjects = Model.RentObjects;
                                var premisesIds = rentObjects.Where(r => r.AddressType == AddressTypes.Premise).Select(r => r.Id)
                                                .Union(rentObjects.Where(r => r.AddressType == AddressTypes.SubPremise).Select(r => r.IdParents["Premise"]))
                                                .Select(r => int.Parse(r));
                                var buildingIds = rentObjects.Where(r => r.AddressType == AddressTypes.Building).Select(r => r.Id)
                                                .Union(rentObjects.Where(r => r.AddressType == AddressTypes.Premise).Select(r => r.IdParents["Building"]))
                                                .Union(rentObjects.Where(r => r.AddressType == AddressTypes.SubPremise).Select(r => r.IdParents["Building"]))
                                                .Select(r => int.Parse(r));

                                foreach (int buildingId in buildingIds)
                                {
                                    var btnTitle = "Здание";
                                    if (buildingIds.Count() > 1)
                                    {
                                        btnTitle += " № " + buildingId;
                                    }

                                    <a class="dropdown-item" title="@btnTitle" aria-label="@btnTitle"
                                       asp-controller="Buildings" asp-action="Details" asp-route-idBuilding="@buildingId" asp-route-returnUrl="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}")">@btnTitle</a>
                                }
                                foreach (int premisesId in premisesIds)
                                {
                                    var btnTitle = "Помещение";
                                    if (premisesIds.Count() > 1)
                                    {
                                        btnTitle += " № " + premisesId;
                                    }

                                    <a class="dropdown-item" title="@btnTitle" aria-label="@btnTitle"
                                       asp-controller="Premises" asp-action="Details" asp-route-idPremises="@premisesId" asp-route-returnUrl="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}")">@btnTitle</a>
                                }
                            }
                        </div>
                    </div>
                }

                <div class="btn-group" role="group" aria-label="Панель доступа">
                    @if (ViewBag.Action == "Details" && (ViewBag.CanEditBaseInfo ?? false))
                    {
                        <div class="btn-group" role="group" aria-label="Панель доступа">
                            <button class="btn btn-primary dropdown-toggle" type="button" title="Инструменты" aria-label="Инструменты" id="toolsBtn_@Model.Claim.IdClaim" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="oi oi-wrench"></span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right text-center" aria-labelledby="toolsBtn_@Model.Claim.IdClaim">
                                <a class="btn btn-outline-dark oi oi-pencil" title="Изменить" aria-label="Изменить"
                                   asp-controller="Claims" asp-action="Edit" asp-route-idClaim="@Model.Claim.IdClaim" asp-route-returnUrl="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}")"></a>
                                <a class="btn btn-danger oi oi-x @(ViewBag.CanEditBaseInfo ?? false ? "" : "disabled")" title="Удалить" aria-label="Удалить"
                                   asp-controller="Claims" asp-action="Delete" asp-route-idClaim="@Model.Claim.IdClaim" asp-route-returnUrl="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}")"></a>
                            </div>
                        </div>
                    }

                    <div class="btn-group" role="group" aria-label="Панель доступа">
                        <button class="btn btn-dark dropdown-toggle" type="button" title="Связанные объекты" aria-label="Связанные объекты" id="objectsBtn_@Model.Claim.IdClaim" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="oi oi-grid-two-up"></span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="objectsBtn_@Model.Claim.IdClaim">
                            <a class="dropdown-item" title="Лицевой счет БКС" aria-label="Лицевой счет БКС"
                               asp-controller="PaymentAccounts" asp-action="Details" asp-route-idAccount="@Model.Claim.IdAccount" asp-route-returnUrl="@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}")">Лицевой счет БКС</a>
                        </div>
                    </div>

                    <div class="btn-group" role="group" aria-label="Отчеты">
                        <button class="btn btn-success dropdown-toggle" type="button" title="Отчеты" aria-label="Отчеты" id="reportsBtn_@Model.Claim.IdClaim" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="oi oi-document"></span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="reportsBtn_@Model.Claim.IdClaim">
                            <a class="dropdown-item rr-report-request-to-bsk" href="#" title="Запрос в БКС" aria-label="Запрос в БКС" data-id-claim="@Model.Claim.IdClaim">Запрос в БКС</a>
                            <a class="dropdown-item rr-report-memo-to-lawyers" href="#" title="СЗ в юридический отдел" aria-label="СЗ в юридический отдел" data-id-claim="@Model.Claim.IdClaim">СЗ в юридический отдел</a>
                        </div>
                    </div>
                </div>
            }
            <div class="btn-group" role="group" aria-label="Панель доступа">
                @if (@ViewBag.ReturnUrl != null)
                {
                    <a class="form-control btn btn-primary" href="@ViewBag.ReturnUrl">Назад</a>
                }
                else
                {
                    <a class="form-control btn btn-primary" asp-controller="Claims" asp-action="Index" asp-route-isBack="true">Назад</a>
                }
                @if (ViewBag.Action == "Create")
                {
                    <input type="submit" value="Создать" id="createBtn" class="form-control btn btn-success" />
                }
                @if (ViewBag.Action == "Edit")
                {
                    <input type="submit" value="Сохранить" id="editBtn" class="form-control btn btn-success" />
                }
                @if (ViewBag.Action == "Delete")
                {
                    <input type="submit" value="Удалить" id="deleteBtn" class="form-control btn btn-danger" />
                }

                <a href="#" data-for="Claim" class="form-control btn btn-primary claim-toggler" title="Развернуть исковую работу" style="font-weight:bold;">∧</a>
            </div>
        </div>
    </div>
    <div class="card-body" id="Claim">
        <form asp-controller="Claims" asp-action="@ViewBag.Action" id="ClaimForm" data-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Claim.IdClaim" />
            <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
            <div class="row">
                <div class="form-group col-6 col-lg-3">
                    <label asp-for="Claim.IdAccount">Лицевой счет</label>
                    <input type="hidden" asp-for="Claim.IdAccount" />
                    <input type="text" data-val="true" data-val-required="Выберите лицевой счет" class="form-control" asp-for="Claim.IdAccountNavigation.Account" title="Номер лицевого счета БКС">
                    <span asp-validation-for="Claim.IdAccountNavigation.Account" class="text-danger"></span>
                </div>
                <div class="form-group col-6 col-lg-3">
                    <label asp-for="Claim.AtDate">Дата фомирования</label>
                    <input type="date" class="form-control" asp-for="Claim.AtDate"
                           value="@(Model.Claim.AtDate.HasValue ? Model.Claim.AtDate.Value.ToString("yyyy-MM-dd") : "")" title="Дата формирования">
                </div>
                <div class="form-group col-6 col-lg-3">
                    <label asp-for="Claim.StartDeptPeriod">Предъявлен период (с)</label>
                    <input type="date" class="form-control" asp-for="Claim.StartDeptPeriod"
                           value="@(Model.Claim.StartDeptPeriod.HasValue ? Model.Claim.StartDeptPeriod.Value.ToString("yyyy-MM-dd") : "")" title="Дата начала предъявляемого периода">
                </div>
                <div class="form-group col-6 col-lg-3">
                    <label asp-for="Claim.EndDeptPeriod">Предъявлен период (по)</label>
                    <input type="date" class="form-control" asp-for="Claim.EndDeptPeriod"
                           value="@(Model.Claim.EndDeptPeriod.HasValue ? Model.Claim.EndDeptPeriod.Value.ToString("yyyy-MM-dd") : "")" title="Дата окончания предъявляемого периода">
                </div>
            </div>
            <div class="row">
                @{
                    var bksAddress = Model.Claim.IdAccountNavigation?.RawAddress;
                    var registryAddress = "";
                    if (Model.RentObjects != null && Model.RentObjects.Any())
                    {
                        registryAddress = Model.RentObjects.Select(r => r.Text).Aggregate((acc, v) => acc + ", " + v);
                    }
                }
                <div class="form-group col-12 col-lg-6">
                    <label for="Claim.BksAddress">Адрес по БКС</label>
                    <input type="text" disabled name="Claim.BksAddress" value="@bksAddress" class="form-control" title="Адрес по БКСа">
                </div>
                <div class="form-group col-12 col-lg-6">
                    <label for="Claim.RegistryAddress">Адрес по жилищному фонду</label>
                    <input type="text" disabled class="form-control" value="@registryAddress" name="Claim.RegistryAddress" title="Адрес по жилищному фонду">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="Claim.EndedForFilter">
                        <label class="form-check-label" asp-for="Claim.EndedForFilter" title="Считать исковую работу завершенной">Считать исковую работу завершенной</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 rr-claim-card">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <h3>Сумма к взысканию</h3>
                            <div class="btn-group" role="group">
                                <a href="#" data-for="ClaimAmount" class="form-control btn btn-primary claim-toggler" title="Развернуть сумму к взысканию" style="font-weight:bold;">∨</a>
                            </div>
                        </div>
                        <div id="ClaimAmount" class="card-body toggle-hide">
                            <div class="row">
                                <div class="form-group col-4">
                                    <label asp-for="Claim.AmountTenancy">Найм</label>
                                    <input type="text" class="form-control decimal" asp-for="Claim.AmountTenancy" title="Сумма к взысканию (найм)">
                                    <span asp-validation-for="Claim.AmountTenancy" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Claim.AmountPenalties">Пени</label>
                                    <input type="text" class="form-control decimal" asp-for="Claim.AmountPenalties" title="Сумма к взысканию (пени)">
                                    <span asp-validation-for="Claim.AmountPenalties" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label>Итого</label>
                                    <input type="text" disabled class="form-control" id="Claim_AmountTotal" name="Claim.AmountTotal"
                                           value="@(Model.Claim.AmountTenancy+Model.Claim.AmountPenalties+Model.Claim.AmountDgi+Model.Claim.AmountPadun+Model.Claim.AmountPkk)"
                                           title="Сумма к взысканию (итого)">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-4">
                                    <label asp-for="Claim.AmountDgi">ДГИ</label>
                                    <input type="text" class="form-control decimal" asp-for="Claim.AmountDgi" title="Сумма к взысканию (ДГИ)">
                                    <span asp-validation-for="Claim.AmountDgi" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Claim.AmountPadun">Падун</label>
                                    <input type="text" class="form-control decimal" asp-for="Claim.AmountPadun" title="Сумма к взысканию (Падун)">
                                    <span asp-validation-for="Claim.AmountPadun" class="text-danger"></span>
                                </div>
                                <div class="form-group col-4">
                                    <label asp-for="Claim.AmountPkk">ПКК</label>
                                    <input type="text" class="form-control decimal" asp-for="Claim.AmountPkk" title="Сумма к взысканию (ПКК)">
                                    <span asp-validation-for="Claim.AmountPkk" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if ((ViewBag.Action == "Details" || ViewBag.Action == "Delete") && Model.LastPaymentInfo != null)
            {
                <div class="row">
                    <div class="col-12 rr-claim-card">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <h3>Сальдо на последний месяц</h3>
                                <div class="btn-group" role="group">
                                    <a href="#" data-for="ClaimLastMonthBalance" class="form-control btn btn-primary claim-toggler" title="Развернуть сумму к взысканию" style="font-weight:bold;">∨</a>
                                </div>
                            </div>
                            <div id="ClaimLastMonthBalance" class="card-body toggle-hide">
                                <h5>Входящее</h5>
                                <hr class="mt-1" />
                                <div class="row">
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Итого</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceInput" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Найм</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceTenancy" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Пени</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceInputPenalties" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">ДГИ</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceDgi" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Падун</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalancePadun" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">ПКК</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalancePkk" type="text" />
                                    </div>
                                </div>
                                <h5>Исходящее</h5>
                                <hr class="mt-1" />
                                <div class="row">
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Итого</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceOutputTotal" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Найм</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceOutputTenancy" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Пени</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceOutputPenalties" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">ДГИ</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceOutputDgi" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">Падун</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceOutputPadun" type="text" />
                                    </div>
                                    <div class="form-group col-4 col-lg-2">
                                        <label class="rr-account-label">ПКК</label>
                                        <input class="form-control" value="@Model.LastPaymentInfo.BalanceOutputPkk" type="text" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-12 rr-claim-card">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <h3 for="Claim.Description">Дополнительные сведения</h3>
                            <div class="btn-group" role="group">
                                <a href="#" data-for="ClaimDescription" class="form-control btn btn-primary claim-toggler" title="Развернуть дополнительные сведения" style="font-weight:bold;">∨</a>
                            </div>
                        </div>
                        <textarea id="ClaimDescription" class="form-control toggle-hide" asp-for="Claim.Description" title="Дополнительные сведения"></textarea>
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-12">
                <partial name="ClaimStates" model="Model.Claim.ClaimStates" />
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <partial name="ClaimPersons" model="Model.Claim.ClaimPersons" />
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <partial name="AttachmentFiles" model="Model.Claim.ClaimFiles" />
            </div>
        </div>
    </div>
</div>

<partial name="ReportsModals">

@section Scripts {
    <script src="~/js/claim.common.js" asp-append-version="true"></script>
    <script src="~/js/claim.reports.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap4-toggle/js/bootstrap4-toggle.min.js"></script>
    @if (ViewBag.Action == "Details" || ViewBag.Action == "Delete")
    {
        <script>
            $(function () {
                $('select').prop('disabled', true);
                $('input').prop('disabled', true);
                $('textarea').prop('disabled', true);
                $('input[type="hidden"]').prop('disabled', false);
                $('input[type="submit"]').prop('disabled', false);
            })
        </script>
    }
}

