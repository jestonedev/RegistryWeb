@model RegistryWeb.Models.Entities.OwnerReasonTypes;
@{
    ViewData["Title"] = "Добавление типа оснований собственности";
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="OwnerReasonTypes" asp-action="Create">
    <div class="form-group">
        <label asp-for="ReasonName" class="control-label">Название</label>
        <input type="text" asp-for="ReasonName" class="form-control" />
    </div>
    <div class="form-group">
        <a class="btn btn-default" asp-controller="OwnerReasonTypes" asp-action="Index">Назад</a>
        <input type="submit" value="Добавить" class="btn btn-success" />
    </div>
</form>

