@using RegistryWeb.Extensions
@using RegistryWeb.ViewOptions
@using RegistryWeb.Models.Entities
@using RegistryWeb.ViewModel
@using RegistryWeb.SecurityServices;
@using RegistryWeb.DataHelpers;
@model OwnerReasonTypesVM<OwnerReasonType>;
@{
    ViewData["Title"] = "Создание типа оснований собственности";
}

@section scripts
    {
    <script src="~/js/ownershipReasonTypes.common.js" asp-append-version="true"></script>
}
<form asp-controller="OwnerReasonTypes" asp-action="Create">
    <div class="card">
        <div class="card-header d-flex flex-column flex-md-row flex-lg-row flex-lg-row">
            <label class="form-check-label h2 col-sm-10 col-md-9 col-lg-9 col-xl-9 pl-0">@ViewData["Title"]</label>

            <div class="btn-group col-sm-3 col-md-3 col-lg-3 col-xl-3 pl-0" role="group" aria-label="Панель доступа">
                @if (@ViewBag.ReturnUrl != null)
                {
                    <a class="form-control btn btn-primary" href="@ViewBag.ReturnUrl">Назад</a>
                }
                else
                {
                    <a class="form-control btn btn-primary" asp-controller="OwnerReasonTypes" asp-action="Index" asp-route-isBack="true">Назад</a>
                }
                @if (ViewBag.Action == "Create")
                {
                    <input type="submit" value="Создать" id="createBtn" class="form-control btn btn-success" />
                }
                @if (ViewBag.Action == "Edit")
                {
                    <input type="submit" value="Сохранить" id="editBtn" class="form-control btn btn-success  @(ViewBag.CanEditBaseInfo ?? false ? "" : "disabled")" />
                }
                @if (ViewBag.Action == "Delete")
                {
                    <input type="submit" value="Удалить" class="form-control btn btn-danger" />
                }
                <a href="#" data-for="ownerreasontype" class="form-control btn btn-primary owner-reason-type-toggler" title="Развернуть помещение" style="font-weight:bold;">∧</a>
            </div>
        </div>
        <div class="card-body" id="ownerreasontype">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="ownerReasonType.ReasonName" class="control-label">Название</label>
                <input type="text" asp-for="ownerReasonType.ReasonName" class="form-control" />
            </div>
        </div>
    </div>
</form>

