@model RegistryWeb.ViewModel.PremisesListVM;
@using RegistryWeb.ViewOptions;
@using RegistryWeb.Models.Entities;
@using RegistryWeb.Extensions;
@{
    Context.Session.Set("Controller", "Premises");
    Context.Session.Set("Action", "Index");
    Context.Session.Set("OrderOptions", Model.OrderOptions);
    Context.Session.Set("FilterOptions", Model.FilterOptions);
    Context.Session.Set("PageOptions", Model.PageOptions);
    string GetTypeFund(Premise premise)
    {
        var fundsHistory = premise.FundsPremisesAssoc.Select(fpa => fpa.IdFundNavigation);
        var fundHistory = fundsHistory
            .FirstOrDefault(fh => fh.ExcludeRestrictionDate == null && fh.IdFund == fundsHistory.Max(f => f.IdFund));
        if (fundHistory == null)
            return "";
        return fundHistory.IdFundTypeNavigation.FundTypeName;
    }
}
<table class="table table-hover">
    <thead>
        <tr>
            <th class="r-table-header-cell">
                <a href="#" data-order-field="IdPremises" data-order-direction="@OrderDirection.Ascending">
                    № по рeестру
                </a>
            </th>
            <th>Адрес</th>
            <th class="r-table-header-cell">
                <a href="#" data-order-field="PremisesType" data-order-direction="@OrderDirection.Ascending">
                    Тип помещения
                </a>
            </th>
            <th>Кадастровый номер</th>
            <th>Общая площадь</th>
            <th class="r-table-header-cell">
                <a href="#" data-order-field="ObjectState" data-order-direction="@OrderDirection.Ascending">
                    Текущее состояние
                </a>
            </th>
            <th>Текущий фонд</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Premises)
        {
            <tr>
                @{
                    var idOwnershipTypeP = item.OwnershipPremisesAssoc.FirstOrDefault() != null ? item.OwnershipPremisesAssoc.LastOrDefault().OwnershipRightNavigation.IdOwnershipRightType : 0;
                    var idOwnershipTypeB = item.IdBuildingNavigation.OwnershipBuildingsAssoc.FirstOrDefault();
                }
                <td style="background: @(item.OwnershipPremisesAssoc.FirstOrDefault()!=null && idOwnershipTypeP==1 ? "#FEDCDC" : idOwnershipTypeP == 2 ? "#BBFEE8" : idOwnershipTypeP == 7 ? "#88FF63" : "");">
                    @item.IdPremises
                </td>
                <td>
                    @item.IdBuildingNavigation.IdStreetNavigation.StreetLong,
                    д.@item.IdBuildingNavigation.House,
                    @item.IdPremisesTypeNavigation.PremisesTypeShort@item.PremisesNum
                </td>
                <td>@item.IdPremisesTypeNavigation.PremisesTypeName</td>
                <td>@item.CadastralNum</td>
                <td>@item.TotalArea</td>
                <td>@item.IdStateNavigation.StateNeutral</td>
                <td>@GetTypeFund(item)</td>
                <td>
                    <input id="PremiseId" asp-for="@item.IdPremises" hidden />
                    <a class="btn btn-primary oi oi-eye" id="premisedetail" title="Подробнее" aria-label="Подробнее"
                       asp-controller="Premises" asp-action="Details" asp-route-idPremises="@item.IdPremises"></a>
                    @*<a class="btn btn-default oi oi-pencil" title="Изменить" aria-label="Изменить"
                            asp-controller="Premises" asp-action="Edit" asp-route-idpremises="@item.IdPremises"></a>
                        <a class="btn btn-danger oi oi-x" title="Удалить" aria-label="Удалить"
                            asp-controller="Premises" asp-action="Delete" asp-route-idpremises="@item.IdPremises"></a>
                        <a class="btn btn-default" title="История фондов" aria-label="История фондов"
                            asp-controller="FundsHistory" asp-action="Index" asp-route-idpremises="@item.IdPremises"></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

