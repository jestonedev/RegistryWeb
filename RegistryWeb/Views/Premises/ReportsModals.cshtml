<!--для операций проставления-->
<form id="restrictionForm">
    <div class="modal fade" id="restrictionModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить реквизит</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body restrictionblock">
                    <div class="form-row">
                        <div class="form-group col-sm-6 col-md-6">
                            <label for="restriction.Number">Номер реквизита</label>
                            <input type="text" class="form-control" name="restriction.Number" title="Номер реквизита">
                        </div>
                        <div class="form-group col-sm-6 col-md-6">
                            <label for="restriction.ResDate">Дата документа</label>
                            <input type="date" class="form-control" name="restriction.ResDate" title="Дата документа" data-val="true" data-val-required="Заполните дату документа" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <span class="text-danger field-validation-valid" data-valmsg-for="restriction.ResDate" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12 col-md-12">
                            <label for="restriction.RestrictionType">Тип права собственности</label>
                            <select class="selectpicker form-control" title="Тип права собственности" name="restriction.RestrictionType"
                                    data-val="true" data-val-required="Тип права собственности обязателен для заполнения" id="restriction.RestrictionType" asp-items="@Model.RestrictionsList"></select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="restriction.RestrictionType" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12 col-md-12">
                            <label for="restriction.Description">Наименование и образ файла</label>
                            <div class="input-group">
                                <input type="text" maxlength="255" class="form-control" name="restriction.Description" title="Выписка от" data-val="true" data-val-required="Заполните поле">
                                <input type="file" name="restriction.RestrictionFile" style="position: absolute; left: -9999px; width: 1px; height: 1px" />
                                <input type="hidden" name="restriction.RestrictionFileRemove" value="false" />
                                <div class="input-group-append rr-restriction-file-buttons">
                                    <a class="btn btn-danger rr-restriction-file-remove" style="display: none"
                                       href="#" title="Удалить образ документа" aria-label="Удалить образ документа"><span class="oi oi-x"></span></a>
                                    <a class="btn btn-success rr-restriction-file-attach" 
                                       href="#" title="Прикрепить образ документа" aria-label="Прикрепить образ документа"><span class="oi oi-paperclip"></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12 col-md-12">
                            <label for="restriction.DateStateReg">Дата г/р в УЮ</label>
                            <input type="date" class="form-control" name="restriction.DateStateReg" title="Дата г/р в УЮ" data-val="true" data-val-required="Заполните дату г/р в УЮ" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <span class="text-danger field-validation-valid" data-valmsg-for="restriction.DateStateReg" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary restriction-save-btn">Добавить</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

