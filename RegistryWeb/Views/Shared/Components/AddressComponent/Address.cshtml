@model RegistryWeb.Models.Address;
@{ 
    var i = ViewBag.Id;
}
<div class="form-row addressBlock" data-id="@i">
    <div class="col">
        <div class="form-group">
            <input typeof="text" class="form-control street" />
        </div>
        <div class="form-row">
            <div class="col-3">
                <label class="control-label">Тип адреса</label>
                <select class="form-control typeAddress" asp-for="IdTypeAddress" name="Addresses[@i].IdTypeAddress">
                    <option value="1">Здание</option>
                    <option value="2">Помещение внутри здания</option>
                    <option value="3">Квартира внутри помещения</option>
                </select>
            </div>
            <div class="col-7">
                <label class="control-label">Улица</label>
                <select class="form-control kladrStreets" asp-for="IdStreet" name="Addresses[@i].IdStreet" asp-items="@{
                    new SelectList(ViewBag.KladrStreets, "IdStreet", "StreetName")}"></select>
            </div>
            <div class="col-2">
                <label class="control-label">Дом</label>
                <select class="form-control house" asp-for="IdBuilding" name="Addresses[@i].IdBuilding" asp-items="@{
                    new SelectList(ViewBag.Buildings, "IdBuilding", "House")}"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="col" id="premisesTypesGroup_@i">
                <label class="control-label">Тип помещения</label>
                <select class="form-control premisesTypes" asp-for="IdPremisesType" name="Addresses[@i].IdPremisesType" asp-items="@{
                    new SelectList(ViewBag.PremisesTypes, "IdPremisesType", "PremisesType")}"></select>
            </div>
            <div class="col" id="premisesNumGroup_@i">
                <label class="control-label premisesTypeAsNum">Номер квартиры</label>
                <select class="form-control premisesNum" asp-for="IdPremise" name="Addresses[@i].IdPremise" asp-items="@{
                    new SelectList(ViewBag.Premises, "IdPremises", "PremisesNum")}"></select>
            </div>
            <div class="col" id="subPremisesNumGroup_@i">
                <label class="control-label">Номер комнаты</label>
                <select class="form-control subPremisesNum" asp-for="IdSubPremise" name="Addresses[@i].IdSubPremise" asp-items="@{
                    new SelectList(ViewBag.SubPremises, "IdSubPremises", "SubPremisesNum")}"></select>
            </div>
        </div>
    </div>
    @if (ViewBag.Action == "Create" || ViewBag.Action == "Edit")
    {
        <div class="col-1">
            <a class="btn btn-danger oi oi-x" title="Удалить" aria-label="Удалить"></a>
        </div>
    }
</div>