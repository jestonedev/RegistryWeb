@model RegistryWeb.ViewModel.BuildingDemolitionInfoVM;
<form id="ownershipRightsForm">
    <script src="~/js/buildingDemolitionInfo.common.js" asp-append-version="true"></script>
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3>Информация о сносе</h3>
            <div>
                <a href="#" id="buildingDemolitionInfoToggle" class="form-control btn btn-primary" title="Развернуть информацию о сносе" style="font-weight:bold;">∨</a>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label for="@Model.DemolishPlanDate" class="col-auto col-form-label">Планируемая дата сноса</label>
                <div class="col-auto">
                    <input type="date" disabled class="form-control field-building-demolition-act-file" value="@Model.DemolishPlanDate" title="@Model.DemolishPlanDate">
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="align-middle">Номер</th>
                        <th class="align-middle">Дата</th>
                        <th class="align-middle">Наименование</th>
                        <th class="align-middle">Тип документа</th>
                        <th class="align-middle">Файл</th>
                        @if (ViewBag.Action == "Edit" || ViewBag.Action == "Create")
                        {
                            <th class="align-middle" width="110">
                                <a href="#" id="buildingDemolitionActFileAdd" class="form-control btn btn-success" title="Добавить документ">&#10010;</a>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody id="buildingDemolitionActFiles" data-id="@ViewBag.Id" data-action="@ViewBag.Action">
                    @foreach (var item in Model.BuildingDemolitionActFiles)
                    {
                        <tr class="building-demolition-act-file" data-idownershipright="@item.Id">
                            <td class="align-middle">
                                <input type="text" disabled class="form-control field-building-demolition-act-file" value="@item.Number" title="@item.Number">
                            </td>
                            <td class="align-middle">
                                <input type="date" disabled class="form-control field-building-demolition-act-file" value="@item.Date.ToString("yyyy-MM-dd")" title="@item.Date.ToString("yyyy-MM-dd")">
                            </td>
                            <td class="align-middle"><input type="text" disabled class="form-control field-building-demolition-act-file" value="@item.Name" title="@item.Name"></td>
                            <td class="align-middle">
                                <select disabled class="form-control field-building-demolition-act-file" title="@item.ActTypeDocument.Name"
                                        asp-items="@{new SelectList(ViewBag.ActTypeDocuments, "Id", "Name",item.IdActTypeDocument)}"></select>
                            </td>
                            <td></td>
                            @if (ViewBag.Action == "Edit" || ViewBag.Action == "Create")
                            {
                                <td class="align-middle">
                                    <div class="btn-group yes-no-panel" role="group" aria-label="Панель подтверждения">
                                        <a class="btn btn-danger oi oi-x" title="Нет" aria-label="Нет"></a>
                                        <a class="btn btn-success oi oi-check" title="Да" aria-label="Да"></a>
                                    </div>
                                    <div class="btn-group edit-del-panel" role="group" aria-label="Панель реадктирования">
                                        <a class="btn btn-primary oi oi-pencil" title="Редактировать" aria-label="Редактировать"></a>
                                        <a class="btn btn-danger oi oi-x delete" title="Удалить" aria-label="Удалить"></a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group row">
                Сохранить Отменить
            </div>
        </div>
    </div>
</form>