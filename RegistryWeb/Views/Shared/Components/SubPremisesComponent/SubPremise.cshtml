@model RegistryWeb.ViewModel.SubPremiseVM;
@using RegistryWeb.Extensions;
@using RegistryWeb.ViewOptions;
@using RegistryWeb.Models.Entities;
@using RegistryWeb.SecurityServices;
@using RegistryWeb.DataHelpers;

@{
    var securityService = (SecurityService)ViewBag.SecurityService;
    var canEdit = Model.IdSubPremises == 0 || 
            (securityService.HasPrivilege(Privileges.RegistryWriteNotMunicipal) && !ObjectStateHelper.IsMunicipal(Model.IdState)) ||
            (securityService.HasPrivilege(Privileges.RegistryWriteMunicipal) && ObjectStateHelper.IsMunicipal(Model.IdState));
}

<li class="list-group-item">
    <input type="hidden" value="@Model.IdPremises" name="IdPremise" />
    <input type="hidden" value="@Model.IdSubPremises" name="IdSubPremise" />
    <div class="form-row">
        <div class="form-group col-md-4 col-lg-2 r-form-group-label">
            <label>Номер комнаты</label>
            <input type="text" maxlength="20" class="form-control" disabled value="@Model.SubPremisesNum" name="SubPremisesNum" title="Номер комнаты">
        </div>
        <div class="form-group col-md-4 col-lg-2 r-form-group-label">
            <label>Общая площадь</label>
            <input type="text" class="form-control decimal" disabled value="@Model.TotalArea" name="TotalArea" title="Общая площадь">
        </div>
        <div class="form-group col-md-4 col-lg-2 r-form-group-label">
            <label>Жилая площадь</label>
            <input type="text" class="form-control decimal" disabled value="@Model.LivingArea" name="LivingArea" title="Общая площадь">
        </div>
        <div class="form-group -md-6 col-lg-3 r-form-group-label">
            <label>Текущее состояние</label>
            @if (canEdit)
            {
                <select class="selectpicker form-control" disabled data-live-search="true" asp-for="@Model.IdState" name="IdState" title="Текущее состояние"
                        asp-items="@ViewBag.ObjectStatesList">
                    <option></option>
                </select>
            }
            else
            {
                <select class="selectpicker form-control" disabled data-live-search="true" asp-for="@Model.IdState" name="IdState" title="Текущее состояние"
                        asp-items="@ViewBag.ObjectStatesFullList">
                    <option></option>
                </select>
            }
        </div>
        <div class="form-group -md-6 col-lg-3 r-form-group-label">
            <label>Текущий фонд</label>
            <select class="selectpicker form-control" disabled data-live-search="true" asp-for="@Model.IdFundType" name="IdFundType" title="Текущий фонд"
                    asp-items="@ViewBag.FundTypesList">
                <option></option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3 r-form-group-label">
            <label class="rr-premises-label">Кадастровый номер</label>
            <input type="text" maxlength="20" class="form-control" disabled value="@Model.CadastralNum" name="CadastralNum" title="Кадастровый номер">
        </div>
        <div class="form-group col-md-3 r-form-group-label">
            <label class="rr-premises-label">Кадастровая стоимость</label>
            <input type="text" class="form-control decimal" disabled value="@Model.CadastralCost" name="CadastralCost" title="Кадастровая стоимость">
        </div>
        <div class="form-group col-md-3 r-form-group-label">
            <label class="rr-premises-label">Балансовая стоимость</label>
            <input type="text" class="form-control decimal" disabled value="@Model.BalanceCost" name="BalanceCost" title="Балансовая стоимость">
        </div>
        <div class="form-group col-md-3 r-form-group-label">
            <label class="rr-premises-label">Лицевой счет ФКР</label>
            <input type="text" class="form-control decimal" disabled value="@Model.Account" name="Account" title="Лицевой счет ФКР">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col r-form-group-label">
            <label class="rr-premises-label">Примечание</label>
            <input type="text" class="form-control decimal" disabled value="@Model.Description" name="Description" title="Примечание">
        </div>
    </div>
    @if (securityService.HasPrivilege(Privileges.TenancyRead) && (ViewBag.Action == "Details" || ViewBag.Action == "Delete") && Model.PaymentInfo != null)
    {
        <div class="form-row">
            <div class="form-group col r-form-group-label">
                <label for="Payment">Размер платы до 28.08.2019</label>
                <input id="Payment" name="Payment" value="@(Model.PaymentInfo.Payment)"
                       type="text" class="form-control" title="Размер платы до 28.08.2019">
            </div>
            <div class="form-group col r-form-group-label">
                <label for="PaymentAfter">Размер платы после 28.08.2019</label>
                <input id="PaymentAfter" name="PaymentAfter" value="@(Model.PaymentInfo.PaymentAfter28082019)"
                       type="text" class="form-control" title="Размер платы после 28.08.2019">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col r-form-group-label">
                <label class="rr-premises-label" for="Hb">Нб</label>
                <input id="Hb" name="Nb" value="@(Model.PaymentInfo.Nb)"
                       type="text" class="form-control" title="Нб">
            </div>
            <div class="form-group col r-form-group-label">
                <label class="rr-premises-label" for="Kc">Кс</label>
                <input id="Kc" name="Nb" value="@(Model.PaymentInfo.KC)"
                       type="text" class="form-control" title="Кс">
            </div>
            <div class="form-group col r-form-group-label">
                <label class="rr-premises-label" for="K1">К1</label>
                <input id="K1" name="Nb" value="@(Model.PaymentInfo.K1)"
                       type="text" class="form-control" title="К1">
            </div>
            <div class="form-group col r-form-group-label">
                <label class="rr-premises-label" for="K2">К2</label>
                <input id="K2" name="Nb" value="@(Model.PaymentInfo.K2)"
                       type="text" class="form-control" title="К2">
            </div>
            <div class="form-group col r-form-group-label">
                <label class="rr-premises-label" for="K3">К3</label>
                <input id="K3" name="Nb" value="@(Model.PaymentInfo.K3)"
                       type="text" class="form-control" title="К3">
            </div>
        </div>
    }
    @if (ViewBag.Action == "Edit" && canEdit)
    {
        <div class="text-center">
            <div class="btn-group yes-no-panel" role="group" aria-label="Панель подтверждения">
                <a class="btn btn-danger subpremise-cancel-btn" title="Нет" aria-label="Нет" href="#"><span class="oi oi-x"></span> Отменить</a>
                <a class="btn btn-success subpremise-save-btn" title="Да" aria-label="Да" href="#"><span class="oi oi-check"></span> Сохранить</a>
            </div>
            <div class="btn-group edit-del-panel" role="group" aria-label="Панель реадктирования">
                <a class="btn btn-primary subpremise-edit-btn" title="Редактировать" aria-label="Редактировать" href="#"><span class="oi oi-pencil"></span> Редактировать</a>
                <a class="btn btn-danger subpremise-delete-btn" title="Удалить" aria-label="Удалить" href="#"><span class="oi oi-x delete"></span> Удалить</a>
            </div>
        </div>
    }
    @if (ViewBag.Action == "Create")
    {
        <a class="subpremise-edit-btn" style="display: none"></a>
        <div class="text-center">
            <div class="btn-group yes-no-panel" role="group" aria-label="Панель подтверждения">
                <a class="btn btn-danger subpremise-cancel-btn" title="Нет" aria-label="Нет" href="#"><span class="oi oi-x"></span> Удалить</a>
            </div>
        </div>
    }
</li>
