<form id="accountKumiCalcDeptForm">
    <div class="modal fade" id="accountKumiCalcDeptModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Расчет суммы задолженности</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="AccountKumi.IdAccount" />
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="AccountKumi.DateFrom">Период (с)</label>
                            <input type="date" class="form-control" title="Период (с)" name="AccountKumi.DateFrom"
                                   data-val="true" data-val-required="Укажите период (с)" id="AccountKumi_DateFrom" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="AccountKumi.DateFrom" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group col-6">
                            <label for="AccountKumi.DateTo">Период (по)</label>
                            <input type="date" class="form-control" title="Период (по)" name="AccountKumi.DateTo"
                                   data-val="true" data-val-required="Укажите период (по)" id="AccountKumi_DateTo" />
                            <span class="text-danger field-validation-valid" data-valmsg-for="AccountKumi.DateTo" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-auto pr-3">Выберите формат:</div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="AccountKumi.FormatFile" checked id="AccountKumi_FormatFile1" value="1">
                            <label class="form-check-label" for="AccountKumi_FormatFile1">xlsx</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="AccountKumi.FormatFile" id="AccountKumi_FormatFile2" value="2">
                            <label class="form-check-label" for="AccountKumi_FormatFile2">ods</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary rr-report-submit">Сформировать</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </div>
</form>


<form id="accountKumiRegInGenForm">
    <div class="modal fade" id="accountKumiRegInGenModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Отправить счет-извещение</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="AccountKumi.IdAccount" />
                    <input type="hidden" name="AccountKumi.Action" />
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label for="Account.OnDate">Выберите за какой период</label>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <select id="AccountKumi_OnDate_Month" name="AccountKumi.OnDate_Month" class="form-control selectpicker" data-title="Выберите месяц"
                                            data-val="true" data-val-required="Укажите месяц">
                                        <option></option>
                                        @{
                                            @for (int i = 1; i <= 12; i++)
                                            {
                                                var date = new DateTime(DateTime.Now.Year, i, 1);
                                                <option value="@i">@date.ToString("MMMM")</option>
                                            }
                                        }
                                    </select>
                                    <span class="text-danger field-validation-valid" data-valmsg-for="AccountKumi.OnDate_Month" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-group col-6">
                                    <select id="AccountKumi_OnDate_Year" name="AccountKumi.OnDate_Year" class="form-control selectpicker" data-title="Выберите год"
                                            data-val="true" data-val-required="Укажите год">
                                        <option></option>
                                        @for (int i = DateTime.Now.Year; i > DateTime.Now.Year - 5; i--)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                    <span class="text-danger field-validation-valid" data-valmsg-for="AccountKumi.OnDate_Year" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12">
                            <label class="mb-1" for="AccountKumi.TextMessage">Текст письма</label>
                            <textarea rows="4" class="form-control" id="AccountKumi_TextMessage" name="AccountKumi.TextMessage" maxlength="4096" title="Текст письма"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <img id="gifforrig" src="~/image/spinner.gif" alt="ожидание..." style="display:none;">
                    <button type="button" class="btn btn-primary rr-report-submit">Сформировать</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </div>
</form>

