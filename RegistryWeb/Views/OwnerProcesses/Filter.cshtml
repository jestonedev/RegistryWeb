@model RegistryWeb.ViewModel.OwnerProcessesListVM;

<form asp-action="Index" method="get" class="r-filter-form">
    <input type="hidden" asp-for="OrderOptions.OrderDirection" />
    <input type="hidden" asp-for="OrderOptions.OrderField" />
    <input type="hidden" asp-for="PageOptions.CurrentPage" />
    <input type="hidden" asp-for="PageOptions.SizePage" />

    <div class="form-group">
        <label class="control-label" for="">Улица</label>
        <input type="text" class="form-control" asp-for="FilterOptions.Street" placeholder="Введите улицу" />
        <label class="control-label">Тип собственника</label>
        <select class="form-control" asp-for="FilterOptions.IdProcessType" asp-items="@{
        new SelectList(Model.OwnerTypes, "IdOwnerType", "OwnerType1", Model.FilterOptions.IdProcessType)}">
            <option value="">Все состояния</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-default r-index-search-button" type="submit">Найти</button>
    </div>
</form>
