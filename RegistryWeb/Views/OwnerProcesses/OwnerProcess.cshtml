@model RegistryWeb.Models.Entities.OwnerProcess;
@{
    if (ViewBag.Action == "Create")
    {
        ViewData["Title"] = "Создание нового процесса собственности";
    }
    else
    {
        ViewData["Title"] = "Процесс собственности №" + Model.IdProcess;
    }
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="OwnerProcesses" asp-action="@ViewBag.Action" id="r-ownerprocess-form" data-action="@ViewBag.Action" method="post">
    <input type="hidden" asp-for="IdProcess" />
    <div class="btn-group mt-2" role="group" aria-label="Панель доступа">
        <a class="btn btn-primary" asp-controller="OwnerProcesses" asp-action="Index">Назад</a>
        @if (ViewBag.Action == "Create")
        {
            <input type="submit" value="Создать" class="btn btn-success" />
        }
        @if (ViewBag.Action == "Edit")
        {
            <input type="submit" value="Сохранить" class="btn btn-success" />
            <a class="btn btn-danger" asp-controller="OwnerProcesses" asp-action="Annul" asp-route-idProcess="@Model.IdProcess">Аннулировать</a>
        }
        @if (ViewBag.Action == "Delete")
        {
            <input type="submit" value="Удалить" class="btn btn-danger" />
        }
    </div>
    <div class="validation text-danger" asp-validation-summary="All"></div>

    <div id="addresses">
        <div class="d-flex justify-content-between mb-1 mt-3">
            <h3>Адреса</h3>
            @if (ViewBag.Action == "Create" || ViewBag.Action == "Edit")
            {
                <a class="btn btn-success" title="Добавить адрес" aria-label="Добавить адрес" id="addressAdd">Добавить</a>
            }
        </div>
        @if (Model.OwnerBuildingsAssoc != null)
        {
            @for (var i = 0; i < Model.OwnerBuildingsAssoc.Count(); i++)
            {
                @await Component.InvokeAsync("AddressComponent",
                         new { addressAssoc = Model.OwnerBuildingsAssoc[i], id = i, action = ViewBag.Action })
            }
        }
        @if (Model.OwnerPremisesAssoc != null)
        {
            @for (var i = 0; i < Model.OwnerPremisesAssoc.Count(); i++)
            {
                @await Component.InvokeAsync("AddressComponent",
                         new { addressAssoc = Model.OwnerPremisesAssoc[i], id = i, action = ViewBag.Action })
            }
        }
        @if (Model.OwnerSubPremisesAssoc != null)
        {
            @for (var i = 0; i < Model.OwnerSubPremisesAssoc.Count(); i++)
            {
                @await Component.InvokeAsync("AddressComponent",
                         new { addressAssoc = Model.OwnerSubPremisesAssoc[i], id = i, action = ViewBag.Action })
            }
        }
    </div>

